        "libs/rock-the-steps/ionic/ui-modals/src/index.ts"
      ],
      "@openforge/rock-the-steps/phaser/singleton": [
        "libs/rock-the-steps/phaser/singleton/src/index.ts"
      ],
      "@openforge/rock-the-steps/phaser/ui-modals": [
        "libs/rock-the-steps/phaser/ui-modals/src/index.ts"
      ],
      "@openforge/shared/data-access-model": [
